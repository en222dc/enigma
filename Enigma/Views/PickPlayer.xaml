<Page x:Class="Enigma.Views.PickPlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Enigma.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PickPlayer">
    <Border Background="#463A5F">
        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="1*" />
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.ColumnSpan="2"
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Content="Pick a Player"
                   FontSize="27" Foreground="White" FontFamily="Banschrift" FontWeight="Bold"/>

            <StackPanel Grid.Row="1" Grid.Column ="0" Grid.RowSpan="4">
                <Label
                   HorizontalAlignment="Center" Margin="15" 
                   Content="Helena"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Christofer"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Evelina"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Patric"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column ="1" Grid.RowSpan="4">
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Eva"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Eric"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Tomas"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
                <Label
                   HorizontalAlignment="Center" Margin="15"
                   Content="Emily"
                   FontSize="27" Foreground="White" FontFamily="Bell MT" FontWeight="Bold"/>
            </StackPanel>








        </Grid>

    </Border>

    
</Page>
