<Page x:Class="Enigma.ViewModels.HighScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Enigma.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HighScoreEndPage" Height="450" Width="900" Background="#463A5F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="HighScore"
               Grid.ColumnSpan="2" Grid.Row="0"  
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontFamily="Banschrift" Foreground="White" FontSize="40" />
        <Label Content="HighScore" 
               Grid.Column="0" Grid.Row="1"  
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontFamily="Banschrift" Foreground="White" FontSize="30" />
        <Label Content="TopPlayer" 
               Grid.Column="1" Grid.Row="1"  
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontFamily="Banschrift" Foreground="White" FontSize="30" />
        <ListBox x:Name="lstBoHighscoreName"
                 Background="#463A5F"
                 BorderBrush="#463A5F"
                 Grid.Column="0" Grid.Row="2"
                 FontFamily="Banschrift" Foreground="White" FontSize="30"/>
        <ListBox x:Name="lstBoTopPlayer" 
                 Grid.Column="1" 
                 Grid.Row="2" 
                 Background="#463A5F"
                 BorderBrush="#463A5F"
                 FontFamily="Banschrift" Foreground="White" FontSize="30"/>
    </Grid>
</Page>