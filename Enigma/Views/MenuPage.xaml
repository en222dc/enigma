<Page x:Class="Enigma.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Enigma.Views"
      mc:Ignorable="d" 
      d:DesignHeight="70" d:DesignWidth="800"
      Title="MenuPage">
    <Border Background="AntiqueWhite">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
               

            </Grid.ColumnDefinitions>

            <Label Content="Start" Grid.Column="0" FontSize="20" Foreground="Black" VerticalAlignment="Center"/>
            <Label Content="HighScore" Grid.Column="1" FontSize="20" Foreground="Black" VerticalAlignment="Center"/>
            <Label Content="Help and Rules" Grid.Column="2" FontSize="20" Foreground="Black" VerticalAlignment="Center"/>
            <Label Content="Exit" Grid.Column="3" FontSize="20" Foreground="Black" VerticalAlignment="Center"/>








        </Grid>
    </Border>
   




</Page>
